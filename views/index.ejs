<!DOCTYPE html>
<html>
<head>
  <title>Simple Blog</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>My Simple Blog</h1>
  <a href="/new">New Post</a>
  <hr>
  <% if (posts.length === 0) { %>
    <p>No posts yet.</p>
  <% } else { %>
    <% posts.forEach(post => { %>
      <div class="post">
        <h2><%= post.title %></h2>
        <p><%= post.content %></p>
      </div>
    <% }) %>
  <% } %>
</body>
</html>
